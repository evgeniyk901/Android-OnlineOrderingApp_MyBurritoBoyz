<item android:state_selected="true" android:state_focused="false" android:state_pressed="false">  
     <shape>   
         <solid  android:color="#ff01ff" /> 
         <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
         <drawablePadding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
   </shape>     
</item>   
	<!--  Inactive state--> 
    <item android:state_selected="false" android:state_focused="false" android:state_pressed="false">  
     <shape>   
         <solid  android:color="#ebebeb" /> 
         <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
         <drawablePadding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
   </shape>     
</item> 
     <!--  Pressed state-->
     <item android:state_pressed="true">  
     <shape>   
         <solid  android:color="#fbfbfb" /> 
         <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
         <drawablePadding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
   </shape>     
</item> 
    <!--  Selected state (using d-pad) -->
     <item android:state_focused="true" android:state_selected="true" android:state_pressed="false">  
     <shape>   
         <solid  android:color="#0101ff" /> 
         <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
         <drawablePadding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />  
   </shape>     
</item> 
  
</selector>
