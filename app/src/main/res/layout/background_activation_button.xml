<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >           
     <shape>            
         <solid  android:color="#dd9d66" />   
          <!-- <solid  android:color="#010101" /> 
         <gradient  android:startColor="#663633" android:endColor="#dd9d66" android:angle="270" />   -->   
          <stroke android:width="2dp" android:color="#2f6699" />             
          <corners android:radius="10dp" />             
         <padding android:left="20dp" android:top="15dp" android:right="20dp"  
          android:bottom="15dp" />         
      </shape>  
  </item>
  <item>  
     <shape>   
         <solid  android:color="#010101" /> 
         <gradient  android:startColor="#dd9d66" android:endColor="#663633" android:angle="270" /> 
         <stroke  android:width="1dp" android:color="#2f6699" />  
         <corners android:radius="10dp" />
         <padding android:left="20dp" android:top="15dp" android:right="20dp"  
          android:bottom="15dp" />         
   </shape>     
</item> 
</selector>
