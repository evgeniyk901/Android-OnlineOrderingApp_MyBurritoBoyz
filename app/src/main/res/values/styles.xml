<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
<style name="NoActionBar">
    <!--  <item name="android:windowActionBar">false</item>-->
    <item name="android:windowNoTitle">true</item>
    <item name="android:configChanges">orientation</item>
</style> 

<style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <!--<item name="android:windowIsFloating">true</item>-->
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:configChanges">orientation</item>
</style>

<style name="ToolBarButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">70sp</item> 
    <item name="android:layout_marginLeft">1sp</item>
    <item name="android:layout_marginRight">0sp</item>
    <item name="android:paddingLeft">0sp</item>
    <item name="android:paddingRight">0sp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:color">#ffffffff</item>
    <item name="android:paddingTop">10dip</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:drawablePadding">2dip</item>
    <item name="android:background">@layout/background_toolbarbutton</item>
</style>

<style name="EditFormToolBarButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">46sp</item> 
    <item name="android:layout_marginLeft">0sp</item>
    <item name="android:layout_marginRight">0sp</item>
    <item name="android:paddingLeft">0sp</item>
    <item name="android:paddingRight">0sp</item>
    <item name="android:paddingTop">0dip</item>
    <item name="android:paddingBottom">5dip</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:drawablePadding">0dip</item>
    <item name="android:background">@layout/background_editform_toolbarbutton</item>
</style>

<style name="EditFormToolBarPad">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">46sp</item> 
    <item name="android:layout_marginLeft">0sp</item>
    <item name="android:layout_marginRight">0sp</item>
    <item name="android:paddingLeft">10sp</item>
    <item name="android:paddingRight">0sp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:background">@layout/background_editform_titlebar</item>
</style>

<style name="EditTextLabel">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">5sp</item>
</style>

<style name="FlashText">
    <item name="android:textColor">#cfcfcf</item>
    <item name="android:textSize">12sp</item>
    <item name="android:lineSpacingExtra">5dp</item>
</style>

</resources>